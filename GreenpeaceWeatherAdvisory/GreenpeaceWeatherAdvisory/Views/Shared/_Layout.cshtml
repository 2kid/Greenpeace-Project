<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SAGIP - buhay at saka</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/greenpeace_style.css" rel="stylesheet" />
</head>
<body>
    <!--Top Bar made by Sheila-->
    <div id="top_bar">
    </div>
    <div id="header">
        <div id="logo"></div>
        <div id="divider1"></div>
    </div>
    <!-- Top Bar made by Sheila /-->


    <div class="navbar navbar-default navbar-default-top">
        
        <div class="container">
            
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SAGIP", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                  @if (User.IsInRole("Admin") || User.IsInRole("Staff") || User.IsInRole("SuperAdmin")) { 
                      <li>@Html.ActionLink("Advisories", "Create", "Alert")</li>
                    <li>@Html.ActionLink("Farmers", "Index", "Farmers")</li>
                    <li>@Html.ActionLink("Regions", "Index", "Regions")</li>
                  }
                   @if(User.IsInRole("SuperAdmin")||User.IsInRole("Admin")){
                     <li>@Html.ActionLink("Admins", "RegisterIndex", "Account")</li>
                     <li>@Html.ActionLink("Staff", "Index", "RegisterStaff")</li>  
                       }

                       
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>


    <div class="container body-content">
        <div id="divider2"></div>
        @RenderBody()
        <!--Customized Horizontal Rule by Sheila-->
        <div id="divider4"></div>
        <!--Customized Horizontal Rule by Sheila-->
        <footer>            
            <div id="link_column1">
                <div class="nav_style" id="link1"><a href="#">Link 1 Goes Here</a></div>
                <div class="nav_style" id="link2"><a href="#">Link 2 Goes Here</a></div>
                <div class="nav_style" id="link3"><a href="#">Link 3 Goes Here</a></div>
            </div>
            <div id="link_column2">
                <div class="nav_style" id="link4"><a href="#">Link 4 Goes Here</a></div>
                <div class="nav_style" id="link5"><a href="#">Link 5 Goes Here</a></div>
                <div class="nav_style" id="link6"><a href="#">Link 6 Goes Here</a></div>
            </div>
            <div id="greenpeace_logo"></div>
            <div id="org_logo"></div>
            <div class="copy" id="copyright">
                <p>&copy; @DateTime.Now.Year - SAGIP</p>
            </div>
            <!-- Therence John M. Resabal, Ahmed A. Masahud, Allen Moses B. Marzan and Sheila Renei Gomez are awesome! -->
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
